/* pages/my/my.wxss */
.header{
  width: 100%;
  height: 320rpx;
  background-image: linear-gradient(120deg, #f6d365 0%, #fda085 100%);
  display: flex;
  align-items: center;
  border-bottom: 15rpx solid #eee;
}
.header .userinfo{
  width: 100%;
  height: 200rpx;
  /* background: pink; */
  display: flex;
  box-sizing: border-box;
  padding: 0 40rpx;
  align-items: center;
  font-size: 34rpx;
  color: #515151;
}
.rzstatus{
  max-width:150rpx;
  background: rgba(21, 21, 21, 0.3);
  display: flex;
  align-items: center;
  padding: 3rpx 10rpx;
  border-radius: 15rpx;
  color: #fff;
  font-size: 26rpx;
  justify-content: space-around;
}
.header .userinfo image.header_pic{
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.header .userinfo .status{
  display: flex;
  flex-direction: column;

}
.header .userinfo .status view{
  display: flex;
  align-items: center;
}
.header .userinfo image.sex{
  width: 45rpx;
  height: 45rpx;
  margin-right: 5rpx;
}
.shop{
  width: 100%;
  height: 150rpx;
  display: flex;
  box-sizing: border-box;
  border-bottom: 15rpx solid #eee;
  align-items: center;
  /* background: #ddd; */
}
.shop view{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 50%;
  box-sizing: border-box;
}
.shop view text{
  
  font-size: 32rpx;
}
.shop image{
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}
.my-list{
  width: 100%;
  /* height: 300rpx; */
  /* background: #ddd; */
}
.my-list .list-item{
  width: 100%;
  height: 110rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  /* background: #ddd; */
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
}
.my-list .list-item .icon{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
.my-list .list-item text{
  flex-grow: 1;
  font-size: 34rpx;
  color: #515151;
}
.my-list .list-item .right{
  width: 40rpx;
  height: 40rpx;
}
.login{
  background: green;
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
  font-size: 30rpx;
  padding: 0 30rpx;
}