/* pages/my_publish/add_fixed/add_fixed.wxss */
.addbox{
  width: 100%;
  height: 180rpx;
  padding: 10rpx;
  box-sizing: border-box;
  /* background: #ddd; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.addbox image{
  width: 140rpx;
}
.addbox text{
  font-size: 32rpx;
  color: #515151;
}
.box {
  /* background: red; */
  height: 260rpx;
  padding: 10rpx;
  box-sizing: border-box;
  white-space: nowrap;
  text-align: center;
  /* border-top: 1rpx solid #ddd; */
  /* border-bottom: 1rpx solid #ddd; */
}

.box .pic_item {
  /* padding: 10rpx; */
  box-sizing: border-box;
  /* border: 1rpx solid #ddd; */
  display: inline-block;
  margin-right: 20rpx;
  /* background: #ddd; */
}

.box .pic_item .position {
  width: 200rpx;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.box .pic_item .position image{
  width: 200rpx;
  height: 240rpx;
}
.box .pic_item .position text {
  width: 100%;
  position: absolute;
  bottom: 0;
  color: #fff;
  font-size: 33rpx;
  background: rgba(219, 32, 32, 0.63)
}
.des{
  width: 100%;
  height: auto;
  /* background: #ddd; */
  padding: 20rpx;
  font-size: 32rpx;
  border: 1rpx solid #ddd;
  box-sizing: border-box;
  border-top: 10rpx solid #ddd;
}
.des textarea{
  /* background: red; */
  height: 230rpx;
}
.but{
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #5fb878;
  margin: auto;
  margin-top: 40rpx;
  color: #fff;
  border-radius: 15rpx;
}