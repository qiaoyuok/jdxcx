/* pages/fixed/fixed.wxss */
.load{
  top: 230rpx;
}
.box{
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  background: rgba(21, 21, 21, 0.5);
  border-bottom: 1rpx solid #eee;
  overflow: scroll; 
  position: fixed;
  top: 120rpx;
  z-index: 999
}
.box .option{
  width: 100%;
  height: 90rpx;
  display: flex;
  position: absolute;
  top: 0;
  z-index: 9999;
  background: #fff;
  border-top: 1rpx solid #eee;
}
.box .option .option-item{
  width: 50%;
  height: 90rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.box .option .option-item image{
  width: 25rpx;
  height: 25rpx;
}
 .box .sort{
  width: 100%;
  box-sizing: border-box;
  padding: 0 25rpx;
  background: #fff;
}
.box .area{
  width: 100%;
  box-sizing: border-box;
  padding: 25rpx;
  background: #fff;
}
.box .serv{
  width: 100%;
  /* height: 350rpx; */
  box-sizing: border-box;
  padding: 50rpx 30rpx;
  background: #fff;
}
.sort,.area{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.sort .sort-item{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 33rpx;
  padding: 0 25rpx;
  box-sizing: border-box;
}
.area .area-item{
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 40rpx;
  border-radius: 5rpx;
  text-align: center;
  border: 1rpx solid #eee;
  box-sizing: border-box;
  font-size: 32rpx;
  margin-right: 10rpx;
}
.box .serv .serv-item{
  display: inline-block;
  padding: 5rpx 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
  height: 80rpx;
  line-height: 60rpx;
  margin-right: 15rpx;
  margin-top: 15rpx;
}
/* 城市选择 */

 .wrapper {
  height: 90vh;
} 
/* 关闭滚动条  */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
/* 城市选择结束 */

.fixed-box{
  width: 100%;
  /* height: 460rpx; */
  /* background: red; */
  position: relative;
  top: 220rpx;
}