/* pages/recovery_detail/recovery_detail.wxss */

swiper {
  width: 100%;
  height: 340rpx;
  overflow: hidden;
}

swiper .slide-image {
  width: 100%;
  /* border-radius: 10rpx; */
  height: 100%;
}

.userinfo {
  margin-top: 20rpx;
}

.userinfo .item {
  width: 100%;
  /* height: 90rpx; */
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  font-size: 30rpx;
}

.userinfo .item label {
  min-width: 130rpx;
  text-align: center;
  color: gray;
  font-size: 34rpx;
}

.userinfo .item view {
  flex-grow: 1;
    display: flex;
  align-items: center;
}
.userinfo .item view image{
  width: 45rpx;
  height: 45rpx;
  margin-left: 60rpx;
}
.userinfo .item view.address {
  color: #1296db;
  border-bottom: 1rpx solid #1296db;
}

.userinfo .item view text {
  color: green;
}

.userinfo .des {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 33rpx;
}

.userinfo .des .tip {
  width: 100%;
  height: 80rpx;
  text-align: center;
  font-size: 36rpx;
}

