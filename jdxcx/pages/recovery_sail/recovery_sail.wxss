/* pages/recovery_sail/recovery_sail.wxss */
.name{
  width: 100%;
  padding: 15rpx;
  font-size: 36rpx;
  box-sizing: border-box;
}
.time{
  font-size: 26rpx;
  color: #515151;
  width: 100%;
  box-sizing: border-box;
  padding: 15rpx;
  border-bottom: 1rpx solid #ddd;
}
.item{
  box-sizing: border-box;
  padding: 15rpx 25rpx;
  display: flex;
  /* align-items: center; */
  font-size: 35rpx;
}
.item label{
  min-width: 180rpx;
  font-size: 32rpx;
  color: #515151;
  text-align: right;
  margin-right: 10rpx;
}
.image{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.image image{
  max-width: 700rpx;
  margin-bottom: 20rpx;
}
.bottom{
  width: 100%;
  height:100rpx;
  position: fixed;
  bottom: 0;
   background: #fff; 
  display: flex;
  border-top: 1rpx solid #ddd;
  box-sizing: border-box;
}
.bottom .item{
  width: 33.3%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0;
}
.bottom .item image{
  width: 60rpx;
  height: 60rpx;
}
.bottom .item text{
  font-size: 26rpx;
}
.bottom .item .call{
  width: 90%;
  height: 70rpx;
  color: #fff;
  background: #E6454A;
  border-radius: 15rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 33rpx;
}