/* pages/assess/assess.wxss */
.box{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.star{
  width: 100%;
  height: 250rpx;
  /* background: #ddd; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.star .stars{
  width: 300rpx;
  margin-top: 50rpx;
  display: flex;
  justify-content: space-around;
}
textarea{
  width: 100%;
  height: 300rpx;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  background: #eee;
  border-radius: 15rpx;
}
button{
  width:80%;
  height: 80tpx;
  line-height: 80rpx;
  text-align: center;
  margin: 80rpx 10%;
  background: #1E9FFF;
  border-radius: 10rpx;
  color: #fff;
}