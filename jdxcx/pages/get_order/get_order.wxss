/* pages/my_order/my_order.wxss */
.load{
  top: 100rpx;
}
.tab_nav{
  width: 100%;
  height: 90rpx;
  display: flex;
  position: fixed;
  top: 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ddd;
  background: #fff;
  z-index: 99;
}
.tab_nav view{
  width: 33.3%;
  height: 90rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 90rpx;
}
.tab_nav .active{
  color: #d4237a;
  border-bottom: 5rpx solid #d4237a;
}
.box{
  width: 100%;
  margin-top: 91rpx;
}
.box .item{
  /* padding: 10rpx 20rpx; */
  border-bottom: 15rpx solid #eee;
}
.box .item .shopinfo{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  /* background: #eee; */
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}
.box .item .shopinfo .shopname{
  flex-grow: 1;
  display: flex;
  align-items: center;
  /* background: red; */
}
.box .item .shopinfo .shopname image{
  width: 30rpx;
  margin-left: 25rpx;
}
.box .item .shopinfo .status{
  width: 130rpx;
  color: red;
  font-weight: 600;
}
.box .item .des{
  padding: 15rpx 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #515151;
}
.box .item .time{
  font-size: 30rpx;
  color: #515151;
  padding: 15rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}