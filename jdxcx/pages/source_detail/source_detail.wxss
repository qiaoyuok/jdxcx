/* pages/source_detail/source_detail.wxss */
.header{
  width: 100%;
  /* height: 300rpx; */
  /* background: #ddd; */
  box-sizing: border-box;
  padding: 25rpx 20rpx;
  border-bottom: 10rpx solid #ddd;
}
.header .name{
  width: 100%;
  font-weight: 600;
  padding: 20rpx 0;
}
.header .price{
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}
.header .price view{
  color: #d4237a;
}
.header .price view label{
  font-size: 22rpx;
}
.header .price text{
  font-size: 30rpx;
  color: #aaa;
}
.header .price view text{
  font-size: 36rpx;
  color: #d4237a;
}
.header .address{
  font-size: 26rpx;
  background: rgba(214, 214, 214, 0.3);
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  color: #8a8a8a;
}
.header .address image{
  width: 30rpx;
  height: 30rpx;
}
.content{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  /* height: 400rpx; */
  /* background: #ddd; */
}
.content .tip{
  height: 80rpx;
  line-height: 80rpx;
  font-weight: 600;
}
.content .des{
  font-size: 30rpx;
}
.content .image{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.content .image image{
  max-width: 700rpx;
  margin-bottom: 20rpx;
}
.bottom{
  width: 100%;
  height:100rpx;
  position: fixed;
  bottom: 0;
   background: #fff; 
  display: flex;
  border-top: 1rpx solid #ddd;
  box-sizing: border-box;
}
.bottom .item{
  width: 33.3%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.bottom .item image{
  width: 60rpx;
  height: 60rpx;
}
.bottom .item text{
  font-size: 26rpx;
}
.bottom .item .call{
  width: 90%;
  height: 70rpx;
  color: #fff;
  background: #E6454A;
  border-radius: 15rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 33rpx;
}